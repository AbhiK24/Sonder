{
  "name": "@sonder/engine",
  "version": "0.1.0",
  "description": "Core engine for Sonder - chat-based games with living NPCs",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    }
  },
  "scripts": {
    "dev": "tsx src/dev.ts",
    "dev:watch": "tsx watch src/dev.ts",
    "telegram": "tsx src/telegram-bot.ts",
    "chorus": "tsx src/chorus-telegram-bot.ts",
    "wanderers-rest": "tsx src/wanderers-rest-telegram-bot.ts",
    "create-npc": "tsx src/scripts/create-npc.ts",
    "generate-images": "tsx src/scripts/generate-npc-images.ts",
    "build": "tsc",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@whiskeysockets/baileys": "7.0.0-rc.9",
    "dotenv": "^16.4.1",
    "grammy": "^1.21.1",
    "gray-matter": "^4.0.3",
    "nanoid": "^5.0.5",
    "node-ical": "^0.25.3",
    "ollama": "^0.5.0",
    "openai": "^4.28.0",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "rrule": "^2.8.1",
    "youtube-transcript": "^1.2.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@mariozechner/pi-agent-core": "^0.54.0",
    "@mariozechner/pi-ai": "^0.54.0",
    "@mariozechner/pi-coding-agent": "^0.54.0",
    "@types/hapi__boom": "^9.0.1",
    "@types/qrcode-terminal": "^0.12.2",
    "tsx": "^4.7.0",
    "vitest": "^1.2.2"
  },
  "license": "MIT"
}
