{
  "name": "sonder",
  "version": "0.1.0",
  "description": "An engine for chat-based games where NPCs feel alive. Local-first, LLM-powered, conversation-driven.",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @sonder/engine dev",
