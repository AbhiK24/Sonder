{
  "name": "sonder",
  "version": "0.1.0",
  "description": "An engine for chat-based games where NPCs feel alive. Local-first, LLM-powered, conversation-driven.",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @sonder/engine dev",
    "dashboard": "pnpm --filter @sonder/dashboard dev",
    "setup": "pnpm --filter @sonder/dashboard dev",
    "chorus": "pnpm --filter @sonder/engine chorus",
    "tavern": "pnpm --filter @sonder/engine telegram",
    "wanderers-rest": "pnpm --filter @sonder/engine wanderers-rest",
    "create-npc": "pnpm --filter @sonder/engine create-npc",
    "generate-images": "pnpm --filter @sonder/engine generate-images",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "eslint packages/*/src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "update": "./scripts/update.sh",
    "update:check": "./scripts/update.sh --check",
    "start": "pm2 start ecosystem.config.cjs",
    "stop": "pm2 stop all",
    "logs": "pm2 logs"
  },
  "keywords": [
    "game-engine",
    "llm",
    "npc",
    "interactive-fiction",
    "chatbot",
    "telegram-bot",
    "local-first",
    "ai-game",
    "narrative-game"
  ],
  "author": "AbhiK24",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AbhiK24/Sonder.git"
  },
  "dependencies": {
    "tsx": "^4.7.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "prettier": "^3.2.4",
    "qrcode": "^1.5.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@8.14.0"
}
